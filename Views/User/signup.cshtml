
@using CakesShop.Models.Interfaces;
@model User;

@{
   

}
<script type="text/javascript">
    function SignUP() {
        var data = $("#userForm").serialize();
        console.log(data);
        alert(data);
        $.ajax({
            type: 'POST',
            url: '/User/Signup',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8', 
             data: data,
            success: function (result) {
                alert('Successfully received Data ');
                console.log(result);
            },
            error: function () {
                alert('Failed to receive the Data');
                console.log('Failed ');
            }
        })
    }

</script>
@{
}
<h1 class="text-center signIn">Sign Up</h1>
<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100 ">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">


                                <img src="/./images/loginlogo.png" style="width: 285px;" alt="logo">

                                <form id="userForm">
                                    <div class="form-outline mb-4">
                                        <i class="fa fa-user"></i>   <label asp-for="Name" class="form-label ">User Name</label>
                                        <input asp-for="Name" class="form-control material-icons">


                                        <span asp-validation-for="Name" class="errors"></span>
                                    </div>
                                     <div class="form-outline mb-4">
                                        <i class="fa fa-lock"></i>    <label asp-for="Gmail" class="form-label">Gmail</label>
                                        <input asp-for="Gmail" class="form-control">

                                        <span asp-validation-for="Gmail" class="errors"></span>

                                        <span class="errors">@ViewBag.validation</span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <i class="fa fa-lock"></i>    <label asp-for="Password" class="form-label">Password</label>
                                        <input asp-for="Password" class="form-control">

                                        <span asp-validation-for="Password" class="errors"></span>

                                        <span class="errors">@ViewBag.validation</span>
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <a onclick="SignUP()" class="btn" style="border-radius:40px; background-image: linear-gradient(-20deg, #616161 0%, #9bc5c3 100%); width:100%;">
                                           Sign Up
                                        </a>
                                        <br />
                                       
                                    </div>

                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4"></h4>
                                <p class="small mb-0"><img src="/./images/login.png" width="80%" height="60%"></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>